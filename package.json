{
  "name": "waddle-web",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "ts-node-esm build/build.ts",
    "build:styles": "sass --no-source-map --update public/styles:dist/styles/css",
    "pack": "ts-node-esm build/build.ts && ts-node-esm build/pack.ts",
    "publish": "ts-node-esm build/publish.ts"
  },
  "dependencies": {
    "lit": "^2.7.6"
  },
  "devDependencies": {
    "@types/node": "^20.4.8",
    "chalk": "^5.3.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.64.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.1"
  },
  "types": "./index.d.ts",
  "files": [
    "."
  ],
  "exports": {
    ".": {
      "import": "./waddle-web.js",
      "require": "./waddle-web.umd.js"
    },
    "./styles/": "./styles/"
  }
}
